@model IEnumerable<C500Hemis.Models.TbThongTinNguoiHocGdtc>

@{
    ViewData["Title"] = "Thông tin người học GDTC";
}
<html lang="vi">
@section Heads {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/fixedcolumns/4.2.2/css/fixedColumns.bootstrap5.min.css">

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/fixedcolumns/4.2.2/js/dataTables.fixedColumns.min.js"></script>
    <link href="~/css/ThongTinHocTapNghienCuuSinh.css" rel="stylesheet" />
}

<h1>THÔNG TIN NGƯỜI HỌC GDTC </h1>

<div class="w">
    <p>
        <a asp-action="Create" style="margin-left:6%;" class="btn btn-create">
            Tạo Mới  <i class="fa-solid fa-plus"></i>
        </a>
    </p>
    <table class="table table-hover" id="example">
        <thead >

            <tr>
                <th>STT</th>
                <th>
                    @Html.DisplayNameFor(model => model.IdThongTinNguoiHocGdtc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdHocVien)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KetQuaHocTap)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TieuChuanDanhGiaXepLoaiTheLuc)
                </th>
                <th class="nosort"> Tùy chọn</th>
            </tr>
        </thead>

        <tbody>
            @{
                int count = 0;
            }
            @foreach (var item in Model)
            {
               
                <tr >
                    <td>
                        @count
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IdThongTinNguoiHocGdtc)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IdHocVienNavigation.IdNguoiNavigation.Ho) @Html.DisplayFor(modelItem => item.IdHocVienNavigation.IdNguoiNavigation.Ten)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.KetQuaHocTap)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TieuChuanDanhGiaXepLoaiTheLuc)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdThongTinNguoiHocGdtc" class="btn" data-bs-toggle="tooltip" title="Chỉnh sửa">
                            <div class="icon-container">
                                <i class="fa-regular fa-pen-to-square" style="color: #7dd9bd;"></i>
                            </div>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdThongTinNguoiHocGdtc" class="btn" data-bs-toggle="tooltip" title="Chi tiết">
                            <div class="icon-container">
                                <i class="fa-solid fa-circle-info" style="color: #e5b8e4;"></i>
                            </div>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdThongTinNguoiHocGdtc" class="btn" data-bs-toggle="tooltip" title="Xóa">
                            <div class="icon-container">
                                <i class="fa-solid fa-trash" style="color: #f46262;"></i>
                            </div>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        // Initialize DataTable
        new DataTable('#example', {
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Vietnamese.json" // thiết lập tiếng việt cho datatables
            },
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "scrollX": true,
            responsive: true,
            scrollX: true,
            fixedColumns: {
                leftColumns: 2,  // Giữ 2 cột đầu tiên
                rightColumns: 1   // Giữ cột cuối cùng
            }
        });

        // Initialize Bootstrap tooltips after DataTable initialization
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

    </script>
}
</html>